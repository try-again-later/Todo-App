<article class="max-w-xl m-auto rounded-md bg-white shadow-md p-4">
  <div class="flex flex-wrap gap-2">
    <h2 class="break-words w-full font-bold text-xl mb-2 {{ todo.completed ? 'line-through text-zinc-400' }}">
      {{ todo.title|e }}
    </h2>

    <div class="-order-1 shrink-0 ml-auto flex gap-2 items-start justify-start">
      {% include 'todos/edit-button.twig' %}

      {% include 'todos/delete-button.twig' %}

      {% include 'todos/mark-as-done-button.twig' %}
    </div>
  </div>

  {% if todo.body is not null %}
    <p class="break-words w-full {{ todo.completed ? 'line-through text-zinc-400' }}">{{ todo.body|e }}</p>
  {% endif %}
</article>
