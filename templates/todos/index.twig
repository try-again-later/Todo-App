{% extends "base.twig" %}

{% block title %}ToDo App â€” Tasks{% endblock %}

{% block content %}
  {% include 'components/main-heading.twig' with {title: 'Tasks'} %}

  {%
    include 'components/link-button-dark.twig'
    with {
      href: '/todos/create',
      title: 'Add a new task',
      class: 'max-w-max m-auto mb-8'
    }
  %}

  {% if todos|length > 0 %}
  <ul class="flex flex-col gap-4">
    {% for todo in todos %}
      <li>
        {% include 'todos/todo.twig' with {'todo': todo} %}
      </li>
    {% endfor %}
  </ul>
  {% else %}
    <p class="text-center text-zinc-400 text-lg italic">No tasks here yet...</p>
  {% endif %}
{% endblock %}
