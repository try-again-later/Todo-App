{% extends "base.twig" %}

{% block title %}ToDo App â€” Sign In{% endblock %}

{% block content %}
  {% include 'components/main-heading.twig' with {title: 'Sign In'} %}

  {% embed 'components/forms/form.twig' with {action: '/login'} %}
    {% block content %}
      {%
        include 'components/forms/input.twig'
        with {type: 'email', name: 'email', required: true, errors: errors['email'], value: values['email']}
      %}

      {%
        include 'components/forms/input.twig'
        with {type: 'password', name: 'password', required: true, errors: errors['password']}
      %}

      {% include 'components/forms/submit-dark.twig' with {title: 'Sign In'} %}
    {% endblock %}
  {% endembed %}
{% endblock %}
