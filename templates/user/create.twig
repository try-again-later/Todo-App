{% extends "base.twig" %}

{% block title %}ToDo App â€” Sign Up{% endblock %}

{% block content %}
  <header>
    <div>
      <a href="/" aria-label="Go to home page">ToDo App</a>
    </div>
  </header>

  <main>
    <h1>Sign Up</h1>

    <form action="/signup" method="post">
      <input type="hidden" name="csrf-token" value="{{ csrfToken }}" />

      <div>
        <label>Email: <input type="email" name="email" required /></label>
        {% include 'components/forms/errors.twig' with {'errors': errors['email']} %}
      </div>

      <div>
        <label>Password: <input type="password" name="password" required /></label>
        {% include 'components/forms/errors.twig' with {'errors': errors['password']} %}
      </div>

      <div>
        <label>Repeat password: <input type="password" name="repeated-password" required /></label>
        {% include 'components/forms/errors.twig' with {'errors': errors['repeated-password']} %}
      </div>

      <button type="submit">Sign Up</button>
    </form>
  </main>
{% endblock %}
